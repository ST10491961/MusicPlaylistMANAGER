<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal" android:padding="16dp" android:background="#F0F8FF" tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music Playlist Manager"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp" />

    <!-- Button for Add to Playlist -->
    <Button
        android:id="@+id/addSongButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Add/Update Song to Playlist"
        android:textSize="18sp"
        android:padding="12dp"
        android:backgroundTint="#FFC107"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:stateListAnimator="@null"
        android:outlineProvider="background" />

    <!-- Button for Detailed View -->
    <Button
        android:id="@+id/detailedViewButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="View Detailed Playlist"
        android:textSize="18sp"
        android:padding="12dp"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:stateListAnimator="@null"
        android:outlineProvider="background" />

    <!-- Button to Exit App -->
    <Button
        android:id="@+id/exitButton"
        android:layout_width="250dp"
        android:layout_height="83dp"
        android:backgroundTint="#F44336"
        android:elevation="8dp"
        android:outlineProvider="background"
        android:padding="12dp"
        android:stateListAnimator="@null"
        android:text="Exit App"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:translationZ="8dp" />

</LinearLayout>
