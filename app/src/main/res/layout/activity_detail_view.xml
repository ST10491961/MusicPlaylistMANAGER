<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    tools:context=".DetailedViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Screen Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detailed Playlist View"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp" />

        <!-- Button to Show Song List -->
        <Button
            android:id="@+id/showSongsButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Display Song Details"
            android:textSize="18sp"
            android:padding="12dp"
            android:backgroundTint="#03A9F4"
            android:textColor="@android:color/white"
            android:layout_marginBottom="15dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:stateListAnimator="@null"
            android:outlineProvider="background" />

        <!-- TextView to display song details -->
        <TextView
            android:id="@+id/tvSongList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song details will appear here."
            android:textSize="16sp"
            android:textColor="#333333"
            android:padding="10dp"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginBottom="20dp"
            android:minHeight="100dp" />

        <!-- Button to Calculate Average Rating -->
        <Button
            android:id="@+id/calculateAverageButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Calculate Average Rating"
            android:textSize="18sp"
            android:padding="12dp"
            android:backgroundTint="#FF5722"
            android:textColor="@android:color/white"
            android:layout_marginBottom="15dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:stateListAnimator="@null"
            android:outlineProvider="background" />

        <!-- TextView to display average rating -->
        <TextView
            android:id="@+id/tvAverageRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average rating will appear here."
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="#3F51B5"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="30dp" />

        <!-- Button to Return to Main Screen -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Return to Main Screen"
            android:textSize="18sp"
            android:padding="12dp"
            android:backgroundTint="#607D8B"
            android:textColor="@android:color/white"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:stateListAnimator="@null"
            android:outlineProvider="background" />

    </LinearLayout>
</ScrollView>
